@model LodiCornFest5k.ViewModels.Results.ListViewModel

@{
    ViewData["Title"] = $"{Model.Race.Name} Runner List";
}

<div class="row">
    <div class="col-sm-2">
        <nav class="nav flex-column nav-pills">
            <span class="navbar-brand">@ViewData["Title"]</span>
            <a class="nav-link" is-active-route asp-controller="Results" asp-action="List" asp-route-year="@Model.Race.Date.Year">Runner List</a>
            <a class="nav-link" is-active-route asp-controller="Results" asp-action="Overall" asp-route-year="@Model.Race.Date.Year">Overall Results</a>
            <a class="nav-link" is-active-route asp-controller="Results" asp-action="AgeGroup" asp-route-year="@Model.Race.Date.Year">Results by Age Group</a>
        </nav>
    </div>
    <div class="col-sm-10">
        <h1>Runner List</h1>
        <h2>@Model.Race.Name</h2>

        <table class="table table-striped">
            <caption>Runner List of @Model.Race.Name</caption>
            <thead class="thead-light">
                <tr>
                    <th>Name</th>
                    <th>Gender</th>
                    <th>Age Group</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var runner in Model.Runners)
                {
                    <tr>
                        <td>
                            <a asp-controller="Runners" asp-action="RunnerDetails" asp-route-runnerName="@runner.LinkName" target="_blank">@runner.Name</a>
                        </td>
                        <td>@runner.Gender</td>
                        <td>@runner.AgeGroupName</td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>